<div class="text-center">
  <h2>{{posts.title}}</h2>
  <div>
    <p>Created by {{posts.user.name}} on {{posts.updated_at}}</p>
  </div>
  <div>
    <p>{{posts.post_text}}</p>
  </div>
</div>
<form class="commentForm" , id={{posts.id}}>
  <div>
    <textarea id="comment_text" , placeholder="Thoughts?"></textarea>
  </div>
  <div>
    <button class="button btn btn-success" type="submit">Post Comment</button>
  </div>
</form>
<h3>Comments</h3>
{{#each posts.comments as |comment|}}
<div>
  <p>{{comment.comment_text}}</p>
  <p>Created by {{comment.user.name}} on {{updated_at}}</p>
</div>
{{/each}}
<script src="/js/comment.js"></script>