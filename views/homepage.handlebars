
{{#each posts as |post| }}
<div class="card bg-dark mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="api/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{post.user.name}} on {{updated_at}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post_text}}
    </p>
  </div>
</div>
{{/each}}