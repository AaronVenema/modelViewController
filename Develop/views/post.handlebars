<div class="text-center">
  <h2>{{post.title}}</h2>
  <div>
    <p>Created by {{user.name}} on {{updated_at}}</p>
  </div>
  <div>
    <p>{{post_text}}</p>
  </div>
</div>
<form class="commentForm" , data-commentid={{id}}>
  <div>
    <textarea id="comment_text" , placeholder="Thoughts?"></textarea>
  </div>
  <div>
    <button class="button btn btn-success" type="submit">Post Comment</button>
  </div>
</form>
<h3>Comments</h3>
{{#each comments as |comment|}}
<div>
  <p>{{comment.comment_text}}</p>
  <p>Created by {{comment.name}} on {{updated_at}}</p>
</div>
{{/each}}
<script src="./js/comment.js"></script>